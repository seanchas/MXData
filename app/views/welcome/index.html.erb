
<div id="quote_search">
    <table>
        <tbody>
            <tr>
                <td class="query">
                    <input type="text" name="query" value="" />
                </td>
            </tr>
        </tbody>
    </table>
</div>



<div id="chart">
    
    <div id="chart_tabs_container">
        
        <ul id="chart_periods" class="left">
            <li data-period="day">День</li>
            <li data-period="week">Неделя</li>
            <li data-period="month">Месяц</li>
            <li data-period="year">Год</li>
            <li data-period="all">Весь период</li>
        </ul>
        
        <ul id="chart_types" class="right">
            <li data-type="line">Линия</li>
            <li data-type="candles">Свечи</li>
            <li data-type="bar">Бары</li>
        </ul>
        
    </div>
    
    <div id="chart_container" style="background-color: #eee; height: 300px;">
    </div>
    
    <div id="chart_instruments_container">
        
        <ul id="chart_insrtuments">
            <li style="color: #4572a7;">
                Газпром
                <span></span>
            </li>
            <li style="color: #aa4643;">
                Сибнефть
                <span></span>
            </li>
            <li style="color: #89a54e;">
                Индекс ММВБ
                <span></span>
            </li>
            <li style="color: #80699b;">
                Индекс ММВБ Газ и Нефть
                <span></span>
            </li>
            <li style="color: #3d96ae;">
                Курс доллара
                <span></span>
            </li>
        </ul>
        
        <span class="reset">Очистить</span>
        
    </div>
    
</div>



<div id="tables">
</div>


<script type="text/javascript" charset="utf-8">

    $(function() {
    mx.data.ready.then(function(metadata) {
            _.each(metadata.markets, function(market) { mx.data.table($("#tables"), market); });

            $(window).trigger("security:selected", { engine: 'stock', market: 'shares', board: 'EQBR', param: 'AFLT' });
            $(window).trigger("security:selected", { engine: 'stock', market: 'shares', board: 'EQNE', param: 'GAZP' });
            
            mx.data.chart($('#chart'));
            
        });

        mx.data.quote_search("#quote_search");
        
    });

</script>
