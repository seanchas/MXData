<script type="text/javascript" charset="utf-8">

    $(function() {
    mx.data.ready.then(function(metadata) {
            _.each(metadata.markets, function(market) { mx.data.table($("#tables"), market); });

            $(window).trigger("security:selected", { engine: 'stock', market: 'shares', board: 'EQBR', param: 'AFLT' });
            $(window).trigger("security:selected", { engine: 'stock', market: 'shares', board: 'EQNE', param: 'GAZP' });
            
            var chart = mx.data.chart($('#chart'));
            chart.addInstrument({
                title:  'Аэрофлот',
                engine: 'stock',
                market: 'shares',
                board:  'EQBR',
                id:     'AFLT'
            })
            
            chart.addInstrument({
                title:  'Газпром',
                engine: 'stock',
                market: 'shares',
                board:  'EQNE',
                id:     'GAZP'
            })
        });

        mx.data.quote_search("#quote_search");
        
    });

</script>
